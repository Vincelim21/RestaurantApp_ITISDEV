            <tr>
                <th>Ingredient Name</th>
                <th>Ingredient Type</th>
                <th>Total Quantity Available</th>
                <th> Unit</th>
            </tr>
            <!-- Loops Each ingredient data onto the table-->
            <% ingredStock.forEach(ingredStock => { %>
                <tr>
                    <td><%= ingredStock.ingredientName %></td>
                    <td><%= ingredStock.ingredientType %></td>
                    <td><%= ingredStock.totalUnitValue %></td>
                    <td><%= ingredStock.unit %></td>
                </tr>
            <% }); %> 
           

