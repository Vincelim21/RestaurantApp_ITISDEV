    <form action = "/orders/record_itempurchase" method="POST">
        <div class="title">
            <h1>Record Item Purchase</h1>
            <hr>
    
            <div class="entry">
                <a>Ingredient Name</a>
                <!-- Dropdown Menu-->
               <select class="dropdown" name ="name" id="name">
