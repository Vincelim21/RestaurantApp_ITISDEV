                    <option  label="<%= ingredientfirst.ingredientName%>" value="<%= ingredientfirst.ingredientName %>">
                <% }) %>
              </select>
            </div>
            <div class="entry">
                <a>Quantity </a>
                <!-- Textbox-->
                <input type="number" name="quantity" min="1" value="<%= ingredientorder.quantity %>">

                
            </div>
            
            
    
            
        </div>
        <div class="btn1"><button class="continue" type="submit">CONTINUE</button></div>
    

    </form>
    
</body>
</html> 
