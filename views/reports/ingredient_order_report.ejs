<!DOCTYPE html>
<html>

<head>
<script type="text/javascript" src="\js\ingredientorderscript.js"></script>
<link rel = "stylesheet" href = "/styles.css"> 
</head>

<body>

<div class = "topnav">
 <a>RESTAURANT NAME</a>
</div>

<div class = "title">
    <h1>Ingredient Order Report</h1>
    <hr>

    <form action = "/reports/ingredient_order_report" method ="POST">
    <h2>Filter By:</h2>
    <div class="entry">
        <a>Date</a>
        <select name ="reportDate" id="reportDate">
            <% orderHistory.forEach(orderHistory => { %>
                <option  label="<%= orderHistory.dateBought %>" value="<%= orderHistory.dateBought %>"> <!-- Value = Mapupunta sa fields Label = Magpapakita sa input -->
            <% }) %>
          </select>
    </div>
    <div class="entry">
        <a>Ingredient Name</a>
        <select name ="ingredientName" id="ingredientName">
            <% ingredientFirst.forEach(ingredientFirst => { %>
                <option  label="<%= ingredientFirst.ingredientName %>" value="<%= ingredientFirst.ingredientName%>"> <!-- Value = Mapupunta sa fields Label = Magpapakita sa input -->
            <% }) %>
          </select>
    </div>
    <div class="entry">
        <a>Ingredient Type</a>
        <select name ="ingredientType" id="ingredientType">
            <% ingredient.forEach(ingredient => { %>
                <option  label="<%= ingredient.ingredientType %>" value="<%= ingredient.ingredientType%>"> <!-- Value = Mapupunta sa fields Label = Magpapakita sa input -->
            <% }) %>
          </select>
    </div>
    <div class="entry">
        <a>Ingredient Type</a>
        <select name ="unit" id="unit">
            <% unit.forEach(unit => { %>
                <option  label="<%= unit.unitName %>" value="<%= unit.unitName%>"> <!-- Value = Mapupunta sa fields Label = Magpapakita sa input -->
            <% }) %>
          </select>
    </div>

</div>
<button class="continue" type="submit" href="/">GENERATE REPORT</button>
</form>




</body>
</html>